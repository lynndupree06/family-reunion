<div class="devise-form">
    <h2>Resend unlock instructions</h2>

    <%= form_for(resource, as: resource_name, url: user_unlock_path(resource_name), html: {method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group form-group-lg">
        <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'Email Address', :required => :required %>
    </div>

    <%= f.submit "Resend unlock instructions", :class => 'btn btn-primary btn-lg btn-block' %>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
